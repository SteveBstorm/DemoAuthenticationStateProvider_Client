@page "/counter"
@using System.Security.Claims
<AuthorizeView Roles="Admin">
    <Authorized>
        @*<label class="text-success">L'utilisateur courant est autorisé</label>*@
        <label class="text-success">L'utilisateur : @context.User.FindFirst(ClaimTypes.Name).Value est autorisé</label>
    </Authorized>
    <NotAuthorized>
        <label class="text-danger">L'utilisateur courant n'est pas autorisé</label>
    </NotAuthorized>
</AuthorizeView>

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
